<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título: Nombre de Otras Actividades -->
    <TextView
        android:id="@+id/txtTituloNombreOtrasActividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Nombre Otras Actividades"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <!-- Contenido: Nombre de Otras Actividades -->
    <TextView
        android:id="@+id/textViewNombreOtrasActividades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Otras Actividades"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <!-- Título: Descripción de Otras Actividades -->
    <TextView
        android:id="@+id/txtDescripOtrasActividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aclonica"
        android:text="Descripción Otras Actividades"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <!-- Contenido: Descripción de Otras Actividades -->
    <TextView
        android:id="@+id/textViewDescripcionOtrasActividades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción Otras Actividades"
        android:textSize="14sp"
        android:paddingTop="4dp" />

</LinearLayout>